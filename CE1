enable
conf t
hostname CE1  

interface FastEthernet0/0
ip address 10.10.255.1 255.255.255.252
no shut

interface FastEthernet0/1
ip address 203.0.113.1 255.255.255.252
no shut

interface Loopback0
ip address 10.10.255.254 255.255.255.255


router ospf 1
router-id 10.10.255.254
network 10.10.255.0 0.0.0.3 area 0
passive-interface default
no passive-interface FastEthernet0/0

router bgp 65100
bgp router-id 10.10.255.254
neighbor 203.0.113.2 remote-as 65000

network 10.10.10.0 mask 255.255.255.0
network 10.10.20.0 mask 255.255.255.0
network 10.10.30.0 mask 255.255.255.0
network 10.10.40.0 mask 255.255.255.0

end
write
